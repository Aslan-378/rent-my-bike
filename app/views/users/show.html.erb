<h1>User Page</h1>
<div class="user-container">
    <div class="vehicle-card__header">
        <h2 class="">My vehicles</h2>
    </div>
    <div class="vehicle-container">
        <% @vehicles.each do |vehicle| %>
            <% if vehicle.model === "Émonda SL 7" %>
                <div class="vehicle-card vehicle-card--promo">
            <% else %>
                <div class="vehicle-card">
            <% end %>
                <div class="vehicle-card__info-container">
                    <div class="vehicle-card__image-container">
                        <img src="<%= Vehicle.pics.sample %>" class="vehicle-card__image" />
                    </div>
                    <div class="vehicle-card__info">
                        <h3 class="vehicle-card__title"><%= vehicle.category %></h3>
                        <p class="vehicle-card__model"><%= vehicle.model %></p>
                        <p class="vehicle-card__description"><%= vehicle.description %></p>
                        <p class="vehicle-card__price">£<%= vehicle.price %></p>                   
                    </div>    
                </div>
            </div>
        <% end %>
    </div>
    <div class="vehicle-card__button">
        <%= link_to "add a new vehicle",  new_vehicle_path, class: "btn btn-primary"%>
    </div>
    <div class="vehicle-card__header">
        <h2>Manage my bookings</h2>
    </div>
    <div class="booking-container">
        <div class="booking-card">     
        </div>
        <div class="vehicle-container">
            <% @vehicles.each do |vehicle| %>
                <% if @user.vehicle_bookings.any? %>
                    <div class="vehicle-card vehicle-card--promo">
                <% else %>
                    <div class="vehicle-card">
                <% end %>
                <div class="vehicle-card__info-container">      
                    <div class="vehicle-card__image-container">
                        <img src="<%= Vehicle.pics.sample %>" class="vehicle-card__image" />
                    </div>
                    <div class="vehicle-card__info">
                        <h3 class="vehicle-card__title"><%= vehicle.category %></h3>
                        <p class="vehicle-card__model"><%= vehicle.model %></p>
                        <p class="vehicle-card__description"><%= vehicle.description %></p>
                        <p class="vehicle-card__price">£<%= vehicle.price %></p>
                    </div>    
                </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="vehicle-card__header">
        <h2>Bookings for my vehicles</h2>
    </div>
    <div class="vehicle-bookings">
        <% if @user.vehicle_bookings.empty?%>
            <div class="vehicle-bookings__description">
                <h5>It does not look like you have any bookings currently</h5>
            </div>
        <% else %>
            <% @user.vehicle_bookings.each do |f| %>
                <p><%= f %></p>
            <% end %>
        <% end %>
    </div>
</div>
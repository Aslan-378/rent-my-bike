<div class="container">
  <h1><%= @vehicle.model %></h1>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://images.unsplash.com/photo-1523476324532-18841ae4b297?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" class="d-block w-100" alt="pic-1">
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1533235333150-35b370ff19d0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" class="d-block w-100" alt="pic-2">
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1530610547000-ea1a815c1416?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" class="d-block w-100" alt="pic-3">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<p><strong>Vehicle category</strong>: <%= @vehicle.category %></p>

<%#= render "bookingform", vehicle: @vehicle, booking: @booking %>

<div class="booking form">
  <%= simple_form_for [@vehicle, @booking] do |f| %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>

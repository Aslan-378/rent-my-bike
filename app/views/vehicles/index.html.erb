<h1>All vehicles (<%= Vehicle.count %>)</h1>

<div class="search-fo">
  <%= form_tag vehicles_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a vehicle" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="container container-2">
  <% @vehicles.each do |vehicle| %>
    <div class="card-trip">
    <img src="https://www.techonline.com/img/tmp/no-image-icon.jpg" />
    <div class="card-trip-infos">
      <div>
        <h2><%= vehicle.category %> | <%= vehicle.model %></h2>
        <p><%= link_to 'See more', vehicle_path(vehicle) %></p>
      </div>
      <h2 class="card-trip-pricing">Â£<%= vehicle.price %>/day</h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
 <% end %>
</div>

<div class="map-con">
  <div id="map"
     style="width: 80%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class='homebtn'>
  <%= link_to"Back to home page", root_path, class: "btn btn-primary center my-3" %>
</div>



